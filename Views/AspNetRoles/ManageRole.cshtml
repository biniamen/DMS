@model IEnumerable<ShareSysProd.Models.Users_in_Role_ViewModel>


@using (Html.BeginForm("Remove_User_fromRole", "AspNetRoles", FormMethod.Post))

{
    @Html.AntiForgeryToken()
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <!-- BEGIN PAGE HEAD-->
            <!-- END PAGE HEAD-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <!-- Contact Form -->
            <div class="note note-success">
                <h3>User Roles Management</h3>

            </div>


            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light portlet-fit portlet-form bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class=" icon-layers font-green"></i>
                                <span class="caption-subject font-green sbold uppercase">Users In Role Management</span>
                            </div>
                            @if (TempData["UserExist"] != null)
                            {
                                <span class="custom-alerts alert alert-success fade in" id="flash-msg">
                                    <i class="fa-lg fa fa-users"></i>
                                    @TempData["UserExist"]
                                </span>
                            }

                            <div class="portlet-body">
                                <div class="form-horizontal">

                                    <hr />
                                    <div class="form-group hidden">
                                        <label class="control-label col-md-2">Role ID</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" name="RoleID" value="@ViewContext.RouteData.Values["id"]" />
                                        </div>
                                    </div>
                                    

                                    <div class="portlet-body">
                                        @* User In current Role *@
                                        <div class="col-md-12">

                                            <span class="caption-subject font-red sbold uppercase"></span>

                                            <table class="table table-striped table-bordered table-hover" id="sample_1">
                                                <thead>
                                                    <tr>
                                                        <th><input type="checkbox" id="checkBoxAll" onclick="checkAll()" class="custom-checkbox" /></th>
                                                        <th>Role Name</th>
                                                        <th>User FullName</th>
                                                        <th>UserID</th>


                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var result in Model)
                                                    {

                                                    <tr>
                                                        <td><input type="checkbox" name="UserID" value="@result.UserId" class="custom-checkbox chkCheckBoxId" /></td>

                                                        <td>@result.Role</td>
                                                        <td>@result.Fullname</td>
                                                        <td>@result.UserId</td>


                                                    </tr>



                                                    }
                                                </tbody>
                                            </table>

                                        </div>


                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Remove User" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>




                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
}

<script type="text/javascript">
    function checkAll() {
        var checked = $("#checkBoxAll").is(':checked');
        $(".chkCheckBoxId").prop("checked", checked);
    }
</script>
<script>
    setTimeout(function () {
        $('#flash-msg').fadeOut('fast');
    }, 3500); // <-- time in milliseconds
</script>

